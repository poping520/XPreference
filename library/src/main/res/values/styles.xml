<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Preference">
        <item name="android:layout">@layout/xpreference_material</item>
    </style>

    <style name="Preference.Category">
        <item name="android:layout">@layout/xpreference_category_material</item>
        <item name="android:shouldDisableView">false</item>
        <item name="android:selectable">false</item>
    </style>

    <style name="Preference.CheckBoxPreference">
        <item name="android:widgetLayout">@layout/xpreference_widget_checkbox</item>
    </style>

    <style name="Preference.SwitchPreference">
        <item name="android:widgetLayout">@layout/xpreference_widget_switch</item>
        <item name="android:switchTextOn">ON</item>
        <item name="android:switchTextOff">OFF</item>
    </style>

    <style name="Preference.DialogPreference">
        <item name="android:positiveButtonText">@android:string/ok</item>
        <item name="android:negativeButtonText">@android:string/cancel</item>
    </style>

    <style name="Preference.DialogPreference.EditTextPreference">
        <item name="android:dialogLayout">@layout/xpreference_dialog_edittext</item>
    </style>

    <style name="Preference.DialogPreference.OptionEditTextPreference">
        <item name="android:dialogLayout">@layout/xpreference_dialog_option_edittext</item>
    </style>

    <style name="Preference_TextAppearanceMaterialBody2">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>